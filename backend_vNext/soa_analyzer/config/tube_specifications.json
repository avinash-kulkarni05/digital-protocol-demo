{
  "_metadata": {
    "description": "Blood collection tube specifications for Stage 5 Specimen Enrichment",
    "purpose": "Reference data for tube types, colors, additives, and handling",
    "version": "1.0.0",
    "last_updated": "2025-12-06"
  },
  "tubes": {
    "edta": {
      "full_name": "EDTA (Ethylenediaminetetraacetic acid)",
      "abbreviation": "EDTA",
      "cap_colors": ["lavender", "purple"],
      "anticoagulant": "K2 EDTA or K3 EDTA",
      "preservative": null,
      "mechanism": "Chelates calcium to prevent clotting",
      "uses": [
        "Hematology (CBC, differential)",
        "HbA1c",
        "DNA extraction",
        "Flow cytometry",
        "EDTA plasma for PK/PD",
        "Reticulocyte count"
      ],
      "not_suitable_for": [
        "Potassium testing (K2/K3 EDTA interferes)",
        "Calcium testing",
        "Certain chemistry tests"
      ],
      "processing": {
        "mixing": "Invert 8-10 times immediately after collection",
        "centrifugation_for_plasma": {
          "speed": "1500-2000 x g",
          "time": "10-15 minutes",
          "temperature": "Room temperature or 4°C"
        }
      },
      "storage": {
        "whole_blood": {
          "room_temperature": "24 hours",
          "refrigerated": "48-72 hours"
        },
        "plasma": {
          "refrigerated": "24 hours",
          "frozen_minus20": "1 month",
          "frozen_minus70": "Long term"
        }
      },
      "common_sizes_ml": [2, 3, 4, 6, 10],
      "fill_volume_critical": false
    },
    "sst": {
      "full_name": "Serum Separator Tube",
      "abbreviation": "SST",
      "cap_colors": ["red", "gold", "tiger_top"],
      "anticoagulant": null,
      "preservative": "Clot activator",
      "mechanism": "Silica particles activate clotting; gel barrier separates serum",
      "uses": [
        "Chemistry panels",
        "Liver function tests",
        "Renal function tests",
        "Thyroid function",
        "Lipid panel",
        "Drug levels (some)",
        "Serology",
        "Immunology"
      ],
      "not_suitable_for": [
        "Tests requiring plasma",
        "Some therapeutic drug monitoring",
        "Tests affected by gel"
      ],
      "processing": {
        "mixing": "Invert 5-6 times after collection",
        "clotting": {
          "time": "30 minutes minimum",
          "condition": "Upright at room temperature"
        },
        "centrifugation": {
          "speed": "1100-1300 x g",
          "time": "10 minutes",
          "temperature": "Room temperature"
        }
      },
      "storage": {
        "serum_on_gel": {
          "room_temperature": "8 hours",
          "refrigerated": "48 hours"
        },
        "serum_aliquoted": {
          "refrigerated": "7 days",
          "frozen_minus20": "1 month",
          "frozen_minus70": "Long term"
        }
      },
      "common_sizes_ml": [3.5, 5, 8.5, 10],
      "fill_volume_critical": false
    },
    "lithium_heparin": {
      "full_name": "Lithium Heparin Tube",
      "abbreviation": "LH",
      "cap_colors": ["green", "light_green"],
      "anticoagulant": "Lithium heparin",
      "preservative": null,
      "mechanism": "Inhibits thrombin to prevent clotting",
      "uses": [
        "STAT chemistry",
        "Ammonia",
        "Lactate",
        "Some therapeutic drug monitoring",
        "Heparin plasma"
      ],
      "not_suitable_for": [
        "Lithium testing (lithium heparin interferes)",
        "Coagulation studies",
        "Hematology"
      ],
      "processing": {
        "mixing": "Invert 8-10 times immediately",
        "centrifugation": {
          "speed": "1500-2000 x g",
          "time": "10 minutes",
          "temperature": "Room temperature or 4°C"
        }
      },
      "storage": {
        "plasma": {
          "room_temperature": "8 hours",
          "refrigerated": "48 hours",
          "frozen": "Varies by analyte"
        }
      },
      "common_sizes_ml": [2, 4, 6, 10],
      "fill_volume_critical": false
    },
    "sodium_citrate": {
      "full_name": "Sodium Citrate Tube",
      "abbreviation": "Citrate",
      "cap_colors": ["light_blue"],
      "anticoagulant": "3.2% Sodium Citrate (109 mM)",
      "preservative": null,
      "mechanism": "Binds calcium to prevent clotting; reversible for coag testing",
      "uses": [
        "PT/INR",
        "aPTT",
        "Fibrinogen",
        "D-dimer",
        "Coagulation factor assays",
        "ESR (some labs)"
      ],
      "not_suitable_for": [
        "Chemistry tests",
        "Hematology"
      ],
      "processing": {
        "mixing": "Invert 3-4 times gently immediately",
        "centrifugation": {
          "speed": "1500 x g",
          "time": "15 minutes",
          "temperature": "Room temperature"
        }
      },
      "storage": {
        "whole_blood": {
          "room_temperature": "4 hours for most coag tests",
          "refrigerated": "Not recommended for most coag tests"
        },
        "plasma": {
          "room_temperature": "4 hours",
          "frozen_minus20": "2 weeks",
          "frozen_minus70": "6 months"
        }
      },
      "common_sizes_ml": [2.7, 4.5],
      "fill_volume_critical": true,
      "fill_requirement": {
        "ratio": "9:1 (blood:anticoagulant)",
        "tolerance": "90-100% fill",
        "consequence": "Underfilling affects PT/INR results"
      }
    },
    "acd": {
      "full_name": "Acid Citrate Dextrose Tube",
      "abbreviation": "ACD",
      "cap_colors": ["yellow"],
      "anticoagulant": "Acid citrate dextrose (ACD-A or ACD-B)",
      "preservative": "Dextrose preserves cell viability",
      "mechanism": "Citrate binds calcium; dextrose nourishes cells",
      "uses": [
        "HLA typing",
        "DNA testing",
        "Paternity testing",
        "Blood banking",
        "Cell preservation"
      ],
      "not_suitable_for": [
        "Routine chemistry",
        "Coagulation (dilution effect)"
      ],
      "processing": {
        "mixing": "Invert 8-10 times",
        "special": "Keep at room temperature for cell viability"
      },
      "storage": {
        "whole_blood": {
          "room_temperature": "Up to 7 days for DNA",
          "refrigerated": "Not for cellular assays"
        }
      },
      "common_sizes_ml": [6, 8.5],
      "fill_volume_critical": false
    },
    "cpt": {
      "full_name": "Cell Preparation Tube",
      "abbreviation": "CPT",
      "cap_colors": ["light_blue", "green"],
      "anticoagulant": "Sodium citrate or sodium heparin",
      "preservative": "Ficoll gel barrier",
      "mechanism": "Gel separates mononuclear cells during centrifugation",
      "uses": [
        "PBMC isolation",
        "Flow cytometry",
        "Cellular assays",
        "Immunology research"
      ],
      "not_suitable_for": [
        "Routine testing",
        "Chemistry",
        "Coagulation"
      ],
      "processing": {
        "mixing": "Invert 8-10 times",
        "centrifugation": {
          "speed": "1500-1800 x g",
          "time": "20-30 minutes",
          "temperature": "Room temperature",
          "brake": "OFF"
        },
        "post_centrifugation": "Harvest PBMC layer within 2 hours"
      },
      "storage": {
        "pbmc": {
          "fresh": "Process within 2 hours",
          "cryopreserved": "Liquid nitrogen for long term"
        }
      },
      "common_sizes_ml": [8],
      "fill_volume_critical": true,
      "fill_requirement": {
        "minimum": "8 mL",
        "consequence": "Insufficient cell yield if underfilled"
      }
    },
    "paxgene": {
      "full_name": "PAXgene Blood RNA Tube",
      "abbreviation": "PAXgene",
      "cap_colors": ["tan", "red"],
      "anticoagulant": "Proprietary RNA stabilizer",
      "preservative": "RNA stabilizing reagent",
      "mechanism": "Immediately stabilizes RNA, prevents degradation",
      "uses": [
        "Gene expression analysis",
        "RNA extraction",
        "Transcriptomic studies",
        "qPCR"
      ],
      "not_suitable_for": [
        "DNA extraction",
        "Any other testing"
      ],
      "processing": {
        "mixing": "Invert 8-10 times immediately",
        "incubation": "2 hours at room temperature before processing or freezing"
      },
      "storage": {
        "whole_blood": {
          "room_temperature": "3 days (after 2h incubation)",
          "refrigerated": "5 days",
          "frozen_minus20": "24 months",
          "frozen_minus70": "Long term"
        }
      },
      "common_sizes_ml": [2.5],
      "fill_volume_critical": true,
      "fill_requirement": {
        "fixed_volume": "2.5 mL",
        "consequence": "Tube is vacuum calibrated; must fill completely"
      }
    },
    "plain": {
      "full_name": "Plain Tube (No Additive)",
      "abbreviation": "Plain",
      "cap_colors": ["red"],
      "anticoagulant": null,
      "preservative": null,
      "mechanism": "Blood clots naturally without additives",
      "uses": [
        "Serum for tests incompatible with gel",
        "Blood bank testing",
        "Some specialized chemistry"
      ],
      "not_suitable_for": [
        "Tests requiring plasma",
        "Hematology"
      ],
      "processing": {
        "mixing": "Do not shake; allow clotting",
        "clotting": {
          "time": "30-60 minutes",
          "condition": "Room temperature"
        },
        "centrifugation": {
          "speed": "1100-1300 x g",
          "time": "10 minutes",
          "temperature": "Room temperature"
        }
      },
      "storage": {
        "serum": {
          "room_temperature": "8 hours",
          "refrigerated": "7 days",
          "frozen": "Varies by analyte"
        }
      },
      "common_sizes_ml": [3, 6, 10],
      "fill_volume_critical": false
    },
    "fluoride_oxalate": {
      "full_name": "Sodium Fluoride/Potassium Oxalate Tube",
      "abbreviation": "NaF/KOx",
      "cap_colors": ["gray"],
      "anticoagulant": "Potassium oxalate",
      "preservative": "Sodium fluoride (glycolysis inhibitor)",
      "mechanism": "Oxalate prevents clotting; fluoride inhibits glucose metabolism",
      "uses": [
        "Glucose (fasting, random, tolerance test)",
        "Lactate"
      ],
      "not_suitable_for": [
        "Most other tests",
        "Sodium or potassium testing"
      ],
      "processing": {
        "mixing": "Invert 8-10 times",
        "centrifugation": {
          "speed": "1500 x g",
          "time": "10 minutes"
        }
      },
      "storage": {
        "plasma": {
          "room_temperature": "24 hours (glucose stable)",
          "refrigerated": "48 hours"
        }
      },
      "common_sizes_ml": [2, 4],
      "fill_volume_critical": false
    }
  },
  "collection_order": {
    "_description": "Recommended order of draw to prevent cross-contamination",
    "order": [
      {"position": 1, "tube": "blood_culture", "reason": "Sterile first"},
      {"position": 2, "tube": "sodium_citrate", "reason": "Coagulation - prevents tissue factor contamination"},
      {"position": 3, "tube": "sst", "reason": "Serum - clot activator"},
      {"position": 4, "tube": "lithium_heparin", "reason": "Heparin plasma"},
      {"position": 5, "tube": "edta", "reason": "EDTA - for hematology"},
      {"position": 6, "tube": "fluoride_oxalate", "reason": "Last - high additive concentration"}
    ],
    "notes": [
      "First tube may be discarded ('discard tube') if coagulation is critical",
      "Follow facility-specific protocols which may vary"
    ]
  },
