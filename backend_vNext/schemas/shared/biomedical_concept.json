{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "biomedicalConcept",
  "title": "CDISC Biomedical Concept",
  "description": "Standardized biomedical concept structure for CDISC compliance across all extraction pipelines",
  "type": "object",
  "properties": {
    "conceptName": {
      "type": "string",
      "description": "Standardized clinical concept name (drug, test, procedure, etc.)",
      "maxLength": 150
    },
    "cdiscCode": {
      "type": "string",
      "description": "NCI EVS code (e.g., C12345) or 'CUSTOM' for unmapped concepts",
      "maxLength": 20
    },
    "domain": {
      "type": "string",
      "description": "CDISC SDTM/CDASH domain code",
      "enum": [
        "CM",
        "EX",
        "DS",
        "LB",
        "VS",
        "EG",
        "PE",
        "QS",
        "MI",
        "PC",
        "PP",
        "BS",
        "MH",
        "PR",
        "DA",
        "DM",
        "AE",
        "DV",
        "IE",
        "TU",
        "TR",
        "RS",
        "FA",
        "OTHER"
      ]
    },
    "specimen": {
      "type": "string",
      "description": "Specimen type if applicable (blood, plasma, urine, tissue, serum, CSF, N/A)",
      "maxLength": 50
    },
    "method": {
      "type": "string",
      "description": "Collection/measurement/administration method if applicable",
      "maxLength": 100
    },
    "confidence": {
      "type": "number",
      "description": "Mapping confidence score (1.0 = exact match, 0.5 = custom/unmapped)",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": {
      "type": "string",
      "description": "Brief explanation for code assignment or mapping source",
      "maxLength": 200
    }
  },
  "required": ["conceptName", "cdiscCode", "domain"],
  "additionalProperties": false,
  "examples": [
    {
      "conceptName": "Complete Blood Count",
      "cdiscCode": "C78713",
      "domain": "LB",
      "specimen": "blood",
      "method": "automated hematology analyzer",
      "confidence": 1.0,
      "rationale": "NCI Thesaurus exact match"
    },
    {
      "conceptName": "Warfarin",
      "cdiscCode": "C29503",
      "domain": "CM",
      "method": "Oral",
      "confidence": 1.0,
      "rationale": "NCI Thesaurus - anticoagulant drug"
    },
    {
      "conceptName": "EQ-5D-5L",
      "cdiscCode": "C103412",
      "domain": "QS",
      "confidence": 0.95,
      "rationale": "PRO instrument - health utility questionnaire"
    }
  ],
  "domainDefinitions": {
    "CM": "Concomitant Medications",
    "EX": "Exposure (Investigational Product)",
    "DS": "Disposition",
    "LB": "Laboratory Test Results",
    "VS": "Vital Signs",
    "EG": "ECG Test Results",
    "PE": "Physical Examination",
    "QS": "Questionnaires (PRO/ClinRO)",
    "MI": "Microscopic Findings",
    "PC": "Pharmacokinetic Concentrations",
    "PP": "Pharmacokinetic Parameters",
    "BS": "Biospecimen",
    "MH": "Medical History",
    "PR": "Procedures",
    "DA": "Device Accountability",
    "DM": "Demographics",
    "AE": "Adverse Events",
    "DV": "Protocol Deviations",
    "IE": "Inclusion/Exclusion Criteria",
    "TU": "Tumor Identification",
    "TR": "Tumor Response",
    "RS": "Disease Response",
    "FA": "Findings About",
    "OTHER": "Other/Custom Domain"
  }
}
