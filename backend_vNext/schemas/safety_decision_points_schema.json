{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://usdm.cdisc.org/v4.0/safety_decision_points_schema.json",
  "title": "USDM 4.0 Safety Decision Points Extraction Schema",
  "description": "Schema for safety decision points including dose modifications, stopping rules, and organ-specific adjustments.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this extraction",
      "pattern": "^[A-Za-z0-9_-]+-safety-decision-points$"
    },
    "instanceType": {
      "type": "string",
      "const": "SafetyDecisionPoints",
      "description": "USDM 4.0 instance type"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this extraction",
      "maxLength": 200
    },

    "discovered_categories": {
      "type": "array",
      "description": "Categories of safety parameters discovered in the protocol",
      "items": {
        "type": "object",
        "properties": {
          "category_id": { "type": "string", "maxLength": 50 },
          "category_name": { "type": "string", "maxLength": 150 },
          "category_description": { "type": ["string", "null"], "maxLength": 400 },
          "parameters_count": { "type": ["integer", "null"] },
          "provenance": { "$ref": "#/definitions/provenance" }
        }
      }
    },

    "decision_points": {
      "type": "array",
      "description": "Safety decision points with rules and actions",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "maxLength": 50 },
          "parameter_name": { "type": "string", "maxLength": 200 },
          "parameter_category": { "type": ["string", "null"], "maxLength": 150 },
          "measurement_type": { "type": ["string", "null"], "maxLength": 100 },
          "decision_rules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "rule_id": { "type": "string", "maxLength": 50 },
                "rule_type": { "type": ["string", "null"], "maxLength": 50 },
                "rule_description": { "type": ["string", "null"], "maxLength": 400 },
                "conditions": { "type": ["object", "null"] },
                "actions": { "type": "array", "items": { "type": "object" } },
                "recovery_criteria": { "type": ["object", "null"] },
                "provenance": { "$ref": "#/definitions/provenance" }
              }
            }
          },
          "monitoring_requirements": { "type": ["object", "null"] },
          "provenance": { "$ref": "#/definitions/provenance" }
        }
      }
    },

    "stopping_rules_summary": {
      "type": ["object", "null"],
      "description": "Summary of study stopping rules",
      "properties": {
        "total_permanent_stopping_conditions": { "type": ["integer", "null"] },
        "stopping_conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "condition_id": { "type": "string" },
              "condition_type": { "type": ["string", "null"] },
              "description": { "type": ["string", "null"], "maxLength": 400 },
              "trigger_threshold": { "type": ["string", "null"], "maxLength": 200 },
              "action": { "type": ["string", "null"], "maxLength": 200 },
              "provenance": { "$ref": "#/definitions/provenance" }
            }
          }
        },
        "provenance": { "$ref": "#/definitions/provenance" }
      }
    },

    "dose_modification_levels": {
      "type": ["object", "null"],
      "description": "Dose modification levels and re-escalation criteria",
      "properties": {
        "has_defined_levels": { "type": ["boolean", "null"] },
        "levels": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "level_id": { "type": "string" },
              "level_name": { "type": ["string", "null"] },
              "dose_percentage": { "type": ["number", "null"] },
              "absolute_dose": { "type": ["string", "null"], "maxLength": 100 },
              "provenance": { "$ref": "#/definitions/provenance" }
            }
          }
        },
        "minimum_dose": { "type": ["string", "null"], "maxLength": 200 },
        "re_escalation_allowed": { "type": ["boolean", "null"] },
        "re_escalation_criteria": { "type": ["string", "null"], "maxLength": 400 },
        "provenance": { "$ref": "#/definitions/provenance" }
      }
    },

    "organ_specific_adjustments": {
      "type": "array",
      "description": "Organ/system-specific dose adjustments",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "maxLength": 50 },
          "organ_system": { "type": "string", "maxLength": 100 },
          "organ_system_detail": { "type": ["string", "null"], "maxLength": 200 },
          "adjustment_trigger": { "type": ["string", "null"], "maxLength": 400 },
          "adjustment_action": { "type": ["string", "null"], "maxLength": 400 },
          "monitoring_requirements": { "type": ["string", "null"], "maxLength": 300 },
          "provenance": { "$ref": "#/definitions/provenance" }
        }
      }
    },

    "extraction_statistics": {
      "type": "object",
      "properties": {
        "decision_points_count": { "type": ["integer", "null"] },
        "stopping_rules_count": { "type": ["integer", "null"] },
        "organ_adjustments_count": { "type": ["integer", "null"] },
        "dose_levels_count": { "type": ["integer", "null"] },
        "categories_count": { "type": ["integer", "null"] }
      }
    },

    "provenance": { "$ref": "#/definitions/provenance" }
  },

  "required": ["id", "instanceType", "name"],

  "definitions": {
    "provenance": {
      "type": ["object", "null"],
      "description": "Source tracking for extracted data",
      "properties": {
        "section_number": { "type": ["string", "null"], "maxLength": 50 },
        "page_number": { "type": ["integer", "null"] },
        "text_snippet": { "type": ["string", "null"], "maxLength": 500 }
      }
    }
  }
}
