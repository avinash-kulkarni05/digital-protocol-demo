      "type": "string",
      "description": "Unique identifier for this extraction",
      "pattern": "^[A-Za-z0-9_-]+-site-operations-logistics$"
    },
    "instanceType": {
      "type": "string",
      "const": "SiteOperationsLogistics",
      "description": "USDM 4.0 instance type"
    },
    "name": {
      "type": [
        "string",
        "null"
      ],
      "description": "Human-readable name for this extraction",
      "maxLength": 200
    },
    "schemaVersion": {
      "type": "string",
      "description": "Schema version for migration compatibility"
    },
    "ich_m11_section": {
      "type": "string",
      "description": "ICH M11 section reference (8.1 + 8.2)"
    },
